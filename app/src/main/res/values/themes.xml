<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SMSSender" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- ActionBar -->
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
        <!-- app -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/textColor</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/textColor</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/white</item>
    </style>

    <style name="Custom.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/white</item>
    </style>

</resources>
