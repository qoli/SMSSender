<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SMSSender" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- ActionBar -->
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
        <!-- app -->
        <item name="colorPrimary">@color/mainColor_deep</item>
        <item name="colorPrimaryVariant">#FFF</item>
        <item name="colorOnPrimary">#FFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#CCC</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#000</item>
        <item name="colorSurface">#000</item>
        <item name="colorOnSurface">#FFF</item>
        <item name="android:colorBackground">@color/background_deep</item>
        <item name="colorOnBackground">#FFF</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@color/black</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Custom.AppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/black</item>
    </style>

</resources>
